{
@ViewData = ["Title"] = "Carrinho"
@model CasaDoCodigo.Models.ViewModels.CarrinhoViewModel
}

<h1>Meu Carrinho.</h1>

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-6">
                Item
            </div>
            <div class="col-md-2">
                Preço Unitário
            </div>
            <div class="col-md-2">
                Quantidade
            </div>
            <div class="col-md-2">
                Subtotal
            </div>
        </div>
    </div>
    @foreach (var item in Model.Itens)
    {
        <div class="panel-body">
            <div class="col-md-3">
                <img src="~/images/produtos/small_@(item.Id).jpg" />
            </div>
            <div class="col-md-3">@(item.Produto.Nome)</div>
            <div class="col-md-2">R$ @(item.PrecoUnitario)</div>
            <div class="col-md-2">@(item.Quantidade)</div>
            <div class="col-md-2">
                <span class="pull-right">
                    @(item.Subtotal)
                </span>
            </div>
        </div>
    }
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-10">
                Total: @Model.Itens.Count() @(Model.Itens.Count() > 2 ? "itens" : "item")
            </div>
            <div class="col-md-2">
                <span class="pull-right">
                    Total: R$ @Model.Total
                </span>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-action="resumo" class="btn btn-success pull-right">Finalizar Pedido</a>
    </div>
</div>
</div>